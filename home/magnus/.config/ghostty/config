# Minimal Ghostty config
theme = snazzy

keybind = option+zero=reset_font_size
keybind = option+one=goto_tab:1
keybind = option+two=goto_tab:2
keybind = option+three=goto_tab:3
keybind = option+four=goto_tab:4
keybind = option+five=goto_tab:5
keybind = option+six=goto_tab:6
keybind = option+seven=goto_tab:7
keybind = option+eight=goto_tab:8
keybind = option+nine=last_tab

keybind = option+shift+tab=previous_tab
keybind = option+tab=next_tab

keybind = super+l=clear_screen