        },
        {
            "from": {
                "key_code": "tab",
                "modifiers": {
                    "mandatory": [
                        "left_shift",
                        "left_command",
                        "left_control",
                        "left_option"
                    ],
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "tab",
                    "modifiers": ["left_control"]
                }
            ],
            "type": "basic"
        }
    ]
