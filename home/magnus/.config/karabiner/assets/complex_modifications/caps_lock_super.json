            "from": {
                "key_code": "caps_lock",
                "modifiers": { "optional": ["any"] }
            },
            "parameters": {
                "basic.to_delayed_action_delay_milliseconds": 0,
                "basic.to_if_alone_timeout_milliseconds": 100
